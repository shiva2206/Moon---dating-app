<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Mainactivity"
    android:id="@+id/mp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/scd"
        android:layout_marginTop="2dp"
        android:background="@drawable/solidrect">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_menu_24"
            android:id="@+id/navop"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp">

        </ImageView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F44336"
            android:layout_gravity="left|top"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="3dp"
            app:cardCornerRadius="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/nomess"
                android:textSize="14dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp">

            </TextView>

        </androidx.cardview.widget.CardView>
        <androidx.appcompat.widget.Toolbar
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:theme="@style/Theme.AppCompat.Light"
            android:id="@+id/toolbar"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Honey Moon"
                android:textColor="@color/white"
                android:textSize="23dp"
                android:gravity="center"
                android:transitionName="appp"
                android:fontFamily="@font/oleo_script_swash_caps_bold">

            </TextView>

        </androidx.appcompat.widget.Toolbar>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sendwhite"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="1dp"
            android:visibility="gone"
            android:rotation="-25">

        </ImageView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:layout_gravity="right|top"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            app:cardCornerRadius="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="gone"
                android:textSize="14dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp">

            </TextView>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frag"
        android:layout_below="@+id/scd">

    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:cardCornerRadius="30dp"
        android:background="@color/bgredy"
        android:layout_below="@+id/scd"
        >
        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:id="@+id/lll"
            android:visibility="gone"
            android:background="@color/bgredy"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="20dp">
                <com.google.android.material.navigation.NavigationView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    app:menu="@menu/login"
                    android:layout_centerVertical="true"
                    app:itemTextColor="@color/white"
                    app:itemIconTint="@color/white"
                    app:labelVisibilityMode="unlabeled"
                    android:id="@+id/navig"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@color/bgredy">
                </com.google.android.material.navigation.NavigationView>
            </ScrollView>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>