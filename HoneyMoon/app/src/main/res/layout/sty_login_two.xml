<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_two"
    android:background="@color/black">
    <TextView
        android:id="@+id/honeytext"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:fontFamily="@font/oleo_script_swash_caps_bold"
        android:text="Honey Moon"
        android:layout_above="@+id/cdd"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:transitionName="appp"
        android:textStyle="bold">

    </TextView>
    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:elevation="100dp"
        app:cardCornerRadius="30dp"
        android:id="@+id/cdd"
        android:backgroundTint="@color/red">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:backgroundTint="@color/black"
            android:layout_gravity="center"
            app:cardCornerRadius="30dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/cfg"
                    app:cardCornerRadius="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/black"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/cfg"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/logo">

                    </de.hdodenhof.circleimageview.CircleImageView>



                </androidx.cardview.widget.CardView>



                <TextView
                    android:id="@+id/usernmw"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/cfg"
                    android:textAlignment="center"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:singleLine="true">

                </TextView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/red"
                    android:layout_margin="10dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="30dp"
                    android:layout_alignParentBottom="true">

                    <Button
                        android:id="@+id/log_in"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:background="@color/red"
                        android:text="log in">

                    </Button>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>



        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/cdd"
        app:cardCornerRadius="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/red">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/close"
            android:layout_margin="3dp"
            android:src="@drawable/closee"
            android:background="@color/red">

        </ImageView>



    </androidx.cardview.widget.CardView>

</RelativeLayout>