<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".attach"
    android:background="@color/red">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pqwe"
        app:cardCornerRadius="50dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/tpp"
            android:background="@color/black">
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="100dp"
                android:id="@+id/c"
                android:backgroundTint="@color/black">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_launcher_background_black"
                    android:id="@+id/cardview">

                </de.hdodenhof.circleimageview.CircleImageView>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/logo"
                    android:id="@+id/chatpro"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    >

                </de.hdodenhof.circleimageview.CircleImageView>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/c"
                android:layout_marginLeft="10dp"
                android:id="@+id/chatusernme"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_toLeftOf="@+id/cdnomess"
                android:layout_marginRight="10dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/c"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/chatusernme"

                android:textColor="@color/white"
                android:id="@+id/chatlin"
                android:layout_toLeftOf="@+id/cdnomess"
                >

            </TextView>




        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/pqwe"
        android:layout_above="@+id/btt"
        android:id="@+id/attimg"
        >

    </ImageView>
    <VideoView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/pqwe"
        android:layout_above="@+id/btt"
        android:visibility="gone"
        android:id="@+id/attvv">

    </VideoView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="50dp"
        android:id="@+id/btt">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:padding="7dp"

            >
            <EditText
                android:id="@+id/chatmes"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="message"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="17dp"
                android:layout_toLeftOf="@+id/chasend">

            </EditText>
            <ImageView
                android:layout_width="30dp"
                android:id="@+id/chasend"
                android:layout_height="30dp"
                android:src="@drawable/sendwhite"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

            </ImageView>





        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>