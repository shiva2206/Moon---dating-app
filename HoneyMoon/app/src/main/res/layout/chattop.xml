<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:id="@+id/cds"
        android:layout_margin="5dp"
        app:cardCornerRadius="30dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/back"
                android:id="@+id/bck"
                android:layout_centerVertical="true">

            </ImageView>
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="100dp"
                android:layout_toRightOf="@+id/bck"
                android:id="@+id/c"
                android:backgroundTint="@color/black">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black"

                    android:id="@+id/cardview">

                </de.hdodenhof.circleimageview.CircleImageView>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/logo"
                    android:id="@+id/chatpro"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    >

                </de.hdodenhof.circleimageview.CircleImageView>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/c"
                android:layout_marginLeft="10dp"
                android:id="@+id/chatusernme"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_toLeftOf="@+id/chatcall"
                android:layout_marginRight="10dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/c"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/chatusernme"
                android:textColor="@color/white"
                android:id="@+id/chatlin"
                android:singleLine="true"
                android:layout_toLeftOf="@+id/cdnomess"
                >

            </TextView>
            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/chatusernme"
                android:id="@+id/anno"
                android:layout_marginRight="90dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/liked"
                    android:id="@+id/cru"
                    android:visibility="gone">

                </ImageView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/admirer"
                    android:id="@+id/adm"
                    android:layout_toRightOf="@+id/cru"
                    android:visibility="gone">

                </ImageView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fri"
                    android:src="@drawable/friend"
                    android:layout_toRightOf="@+id/adm"
                    android:visibility="gone">

                </ImageView>

            </RelativeLayout>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/chatvide"
                android:padding="3dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/video"
                android:layout_centerVertical="true">

            </ImageView>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/chatcall"
                android:padding="3dp"
                android:src="@drawable/audio"
                android:layout_toLeftOf="@+id/chatvide"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp">

            </ImageView>



        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>