<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/ani"

    android:layout_marginBottom="4dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text=""
        android:layout_marginTop="10dp"
        android:textSize="11dp"
        android:id="@+id/datedat"

        android:layout_marginBottom="4dp"
        android:textStyle="bold"
        android:visibility="gone">

    </TextView>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cds"

        android:layout_marginRight="50dp"
        android:elevation="100dp"
        android:background="@drawable/solidred2"
        android:layout_below="@+id/datedat"
        app:cardCornerRadius="20dp"
        android:layout_marginLeft="4dp">

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:id="@+id/rt"
                android:visibility="gone"
                android:backgroundTint="@color/greyredy"
                android:background="@drawable/solidred2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rtname"
                    android:textStyle="bold|italic"
                    >



                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rtcht"
                    android:text=""
                    android:layout_below="@+id/rtname">

                </TextView>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/rtimg"
                    android:visibility="gone"
                    android:layout_below="@+id/rtname">

                </ImageView>
                <VideoView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/rtvid"
                    android:visibility="gone"
                    android:layout_below="@+id/rtname">

                </VideoView>

            </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dsa"
            android:padding="10dp"
            android:layout_below="@+id/rt"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/blackypic"
                android:id="@+id/chatpro"
                android:visibility="gone">

            </de.hdodenhof.circleimageview.CircleImageView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/chatpro"
                android:id="@+id/lkj">
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"

                    android:id="@+id/secimag">

                </ImageView>
                <VideoView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:id="@+id/secvide"
                    android:visibility="gone">

                </VideoView>
            </RelativeLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/chatpro"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/lkj"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:id="@+id/chatch"
                >

            </TextView>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dsa"
            android:textSize="8dp"
            android:id="@+id/sectme"
            android:textColor="@color/white"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:gravity="right">

        </TextView>



    </RelativeLayout>


    <ImageView
        android:id="@+id/seclik"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_below="@+id/cds"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-15dp"
        android:layout_marginEnd="2dp"
        android:visibility="gone"

        android:layout_marginBottom="2dp"
        android:background="@drawable/blacksolidcircle"
        android:elevation="1000dp"
        android:padding="5dp"
        android:src="@drawable/liked">

    </ImageView>



</RelativeLayout>