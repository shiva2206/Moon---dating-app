<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="50dp"
    android:backgroundTint="@color/red">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:src="@drawable/profile"
            android:layout_centerHorizontal="true"

            android:id="@+id/callpro">

        </de.hdodenhof.circleimageview.CircleImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/callusername"
            android:layout_below="@+id/callpro"
            android:layout_centerHorizontal="true"
            android:text="shiva_daw">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/callstate"
            android:text="ringing"
            android:layout_below="@+id/callusername"
            android:layout_centerHorizontal="true">

        </TextView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            android:backgroundTint="@color/black"
            android:layout_marginTop="80dp"
            android:id="@+id/deccd"
            android:layout_below="@+id/callstate"
            android:layout_centerHorizontal="true">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decline"
                android:textColor="@color/white"
                android:background="@color/black"
                android:id="@+id/decl"
                android:visibility="visible">

            </Button>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            android:backgroundTint="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:id="@+id/piccd"
            android:layout_below="@+id/deccd"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pick"
                android:textColor="@color/white"
                android:background="@color/black"
                android:id="@+id/pick"
                android:visibility="visible">

            </Button>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            android:backgroundTint="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/piccd"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="reject"
                android:textColor="@color/white"
                android:background="@color/black"
                android:id="@+id/reject"
                android:visibility="visible">

            </Button>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>


</androidx.cardview.widget.CardView>