<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/red"
    android:orientation="vertical"
    tools:context="fragment.story_seefrag">
    <jp.shts.android.storiesprogressview.StoriesProgressView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="3dp"
        android:id="@+id/spv">

    </jp.shts.android.storiesprogressview.StoriesProgressView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topprl"
        android:layout_below="@+id/spv">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/topp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/red"
            android:elevation="100dp"
            app:cardCornerRadius="30dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/red"

                android:padding="10dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgh"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/liked"
                        android:id="@+id/cru"
                        android:visibility="gone"
                        >

                    </ImageView>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/admirer"
                        android:id="@+id/adm"
                        android:visibility="gone"
                        android:layout_toRightOf="@+id/cru">

                    </ImageView>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/fri"
                        android:visibility="gone"
                        android:src="@drawable/friend"
                        android:layout_toRightOf="@+id/adm">

                    </ImageView>

                </RelativeLayout>


                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/logo"
                    android:id="@+id/stopro">

                </de.hdodenhof.circleimageview.CircleImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/stopro"
                    android:textSize="20dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:layout_marginLeft="7dp"
                    android:id="@+id/stousrnme"
                    android:layout_toLeftOf="@+id/imgh">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="title"
                    android:singleLine="true"
                    android:textSize="13dp"
                    android:layout_below="@+id/stousrnme"
                    android:layout_toRightOf="@+id/stopro"
                    android:textColor="@color/white"
                    android:layout_marginLeft="7dp"
                    android:id="@+id/stotit"
                    >

                </TextView>


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:id="@+id/bnmz"
                    android:layout_alignParentRight="true"
                    app:cardCornerRadius="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="3dp">

                    <ImageView
                        android:id="@+id/himen"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:src="@drawable/ic_menu"
                        android:visibility="gone">

                    </ImageView>
                </androidx.cardview.widget.CardView>




            </RelativeLayout>

        </androidx.cardview.widget.CardView>



    </RelativeLayout>



