<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_gravity="center"
    android:padding="10dp"
    app:cardCornerRadius="30dp"
    android:layout_margin="10dp"
    android:background="@drawable/solidred2"
    >




            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/bltk"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/bluesolidcircle"
                android:visibility="gone">

            </de.hdodenhof.circleimageview.CircleImageView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/hnae"
            android:layout_below="@+id/anno"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/black">

            <ImageView
                android:id="@+id/bcvpa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

            </ImageView>

            <ImageView
                android:id="@+id/vpa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="centerCrop">

            </ImageView>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/anno"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:padding="4dp"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/cru"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/liked"
                android:visibility="gone">

            </ImageView>

            <ImageView
                android:id="@+id/adm"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/cru"
                android:src="@drawable/admirer"
                android:visibility="gone">

            </ImageView>

            <ImageView
                android:id="@+id/fri"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/adm"
                android:src="@drawable/friend"
                android:visibility="gone">

            </ImageView>

        </RelativeLayout>
