<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/red"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:id="@+id/cdmess"
        android:elevation="100dp"
        app:cardCornerRadius="30dp"
        android:layout_margin="4dp">

        <RelativeLayout
            android:id="@+id/messrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:textColor="@color/white"
                android:text=""
                android:id="@+id/lp">


            </TextView>
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/black"
                app:cardCornerRadius="100dp"
                android:layout_toRightOf="@id/lp"
                android:layout_centerVertical="true"
                android:id="@+id/id">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:id="@+id/cardview">

                </de.hdodenhof.circleimageview.CircleImageView>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/chatpro"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/logo"
                    android:layout_gravity="center">

                </de.hdodenhof.circleimageview.CircleImageView>

            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/chatusernme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/id"
                android:layout_toLeftOf="@+id/ere"
                android:layout_marginTop="4dp"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:singleLine="true"
                android:textStyle="bold">

            </TextView>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:text="Remove"
                android:id="@+id/ere"
                android:textSize="10dp"
                android:textColor="@color/white">

            </TextView>
            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_below="@+id/chatusernme"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/id"
                android:id="@+id/anno"
                android:layout_marginRight="50dp"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/liked"
                    android:id="@+id/cru"
                    android:visibility="gone">

                </ImageView>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/admirer"
                    android:id="@+id/adm"
                    android:layout_toRightOf="@+id/cru"
                    android:visibility="gone">

                </ImageView>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/fri"
                    android:src="@drawable/friend"
                    android:layout_toRightOf="@+id/adm"
                    android:visibility="gone">

                </ImageView>

            </RelativeLayout>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>